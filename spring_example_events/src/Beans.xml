<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorld" class="HelloWorld">
        <property name="message" value="Hello World"/>
    </bean>

    <bean id="costumEventHandler" class="CostumEventHandler"/>
    <bean id="costumEventPublisher" class="CostumEventPublisher"/>

    <bean id="StartEventHandler" class="CStartEventHandler"/>
    <bean id="StopEventHandler" class="CStopEventHandler" />
</beans>